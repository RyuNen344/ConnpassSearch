<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <data>

        <variable
                name="clickListener"
                type="android.view.View.OnClickListener"/>

        <variable
                name="item"
                type="com.ryunen344.connpasssearch.data.Event"/>
    </data>

    <FrameLayout
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{clickListener}">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/list_item_padding"
                android:paddingLeft="@dimen/list_item_padding"
                android:paddingRight="@dimen/list_item_padding"
                android:paddingTop="@dimen/list_item_padding">

            <TextView
                    android:id="@+id/event_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{item.title}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@android:color/black"
                    android:maxLines="1"
                    />

            <TextView
                    android:id="@+id/event_catch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/event_title"
                    android:text="@{item.catch}"
                    android:visibility="@{item.catch.length == 0 ? android.view.View.GONE : android.view.View.VISIBLE}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/black"
                    android:maxLines="2"
                    />

            <TextView
                    android:id="@+id/place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/event_catch"
                    android:text="place :"
                    android:visibility="@{item.place.length == 0 ? android.view.View.GONE : android.view.View.VISIBLE}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@android:color/black"
                    android:maxLines="1"
                    />

            <TextView
                    android:id="@+id/event_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/event_catch"
                    android:layout_toEndOf="@+id/place"
                    android:text="@{item.place}"
                    android:visibility="@{item.place.length == 0 ? android.view.View.GONE : android.view.View.VISIBLE}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@android:color/black"
                    android:maxLines="3"
                    />

            <TextView
                    android:id="@+id/tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/place"
                    android:text="tag :"
                    android:visibility="@{item.hash_tag.length == 0 ? android.view.View.GONE : android.view.View.VISIBLE}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@android:color/black"
                    android:maxLines="1"
                    />

            <TextView
                    android:id="@+id/event_hash_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/event_place"
                    android:layout_toEndOf="@+id/tag"
                    app:hashTag="@{item.hash_tag}"
                    android:visibility="@{item.hash_tag.length == 0 ? android.view.View.GONE : android.view.View.VISIBLE}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@android:color/black"
                    android:maxLines="3"
                    />

        </RelativeLayout>


    </FrameLayout>

</layout>